<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rowrequestsynd"
    >

    <TextView
        android:layout_margin="6dp"
        android:padding="3dp"
        android:text="Name"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
 android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_in_request"
        />
    <LinearLayout
        android:layout_margin="6dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:text="dd/mm/yy"
            android:textSize="20sp"
            android:id="@+id/date_in_request"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="hh:mm"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:id="@+id/time_in_request"
            />




    </LinearLayout>

    <TextView
        android:layout_margin="6dp"
        android:padding="3dp"
        android:drawableLeft="@drawable/ic_info_outline_black_24dp"
        android:layout_width="match_parent"
        android:text="to meet"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:id="@+id/purpose_in_request"
        />
    <TextView
        android:drawableLeft="@drawable/ic_message_black_24dp"
        android:layout_margin="6dp"
        android:padding="3dp"
        android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_in_request"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#f9d7db"/>



</LinearLayout>