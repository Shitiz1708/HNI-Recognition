<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    >



        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/layout">


            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"

                android:clickable="false"
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFFFF"

                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-130dp"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/man" />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="#ebca0707"

                android:elevation="4dp"
                android:paddingBottom="24dp">



                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:text="Name"

                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backprofile"
                android:layout_marginTop="280dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                  >

                    <TextView
                        android:id="@+id/accountnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account no"
                        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                        android:padding="7dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/back"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/dob"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:padding="7dp"
                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/back"

                        android:text="Date of Birth" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_margin="5dp"
                        android:padding="7dp"
                         android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/back"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/phonenumber"
                        android:layout_margin="5dp"
                        android:drawableLeft="@drawable/ic_contacts_black_24dp"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/back"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Phone Number" />
                    <TextView

                        android:layout_margin="5dp"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:id="@+id/accountbalance"
                        android:background="@drawable/back"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_account_balance_wallet_black_24dp"
                        android:layout_height="wrap_content"
                        android:text="Account Balance" />
                    <TextView

                        android:layout_margin="5dp"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/back"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_format_list_numbered_black_24dp"
                        android:layout_height="wrap_content"
                        android:text="IFSC: SYND01ES" />
                    <TextView

                        android:layout_margin="5dp"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/back"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_keyboard_black_24dp"
                        android:layout_height="wrap_content"
                        android:text="MICR: 2102536" />
                    <TextView

                        android:layout_margin="5dp"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/back"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                        android:layout_height="wrap_content"
                        android:text="Branch: Delhi Cantt" />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>






    </ScrollView>